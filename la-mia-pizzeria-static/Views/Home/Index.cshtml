@{
      Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <title>Bootstrap-freelancer</title>
    <!-- fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- bootstrap icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <!-- bootstrap css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

    <!-- bootstrap js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous" defer></script>
    <!-- style -->
</head>
<body>
    
<main>
        <ul class="d-flex  mt-3 justify-content-center" style="list-style-type:none;">
            <li class="me-4">
                <div class="card" style="width: 18rem; height: 25rem;">
                <img src="~/img/margherita-50kalo.jpg" class="card-img-top" alt="Pizza Margherita">
                <div class="card-body">
                        <h5 class="card-title  ms-lg-3">Margherita</h5>
                        <p class="card-text  ms-lg-3">Pizza classica dal gusto inconfondibile.</p>
                        <h6 class="ms-lg-3">Prezzo:4$</h6>
                </div>
            </div>
        </li>
        <li class="me-4">
                <div class="card" style="width: 18rem; height: 25rem;">
                    <img src="~/img/americana.jpg" class="card-img-top" alt="Americana" style="height: 12rem;">
                <div class="card-body">
                        <h5 class="card-title ms-lg-3">Americana</h5>
                        <p class="card-text ms-lg-3">Pizza che De Sica definirebbe con: 'Che è sta cafonata'.</p>
                        <h6 class="ms-lg-3">Prezzo:6$</h6>
                </div>
            </div>
        </li>
            <li class="me-4">
                <div class="card" style="width: 18rem; height: 25rem;">
                    <img src="~/img/diavola.jpg" class="card-img-top" alt="Diavola" style="height: 12rem;">
                <div class="card-body">
                        <h5 class="card-title ms-lg-3">Diavola</h5>
                        <p class="card-text ms-lg-3">Pizza leggera ma con quel pizzico in più.</p>
                        <h6 class="ms-lg-3">Prezzo:5$</h6>
                </div>
            </div>
        </li>
            <li class="me-4">
                <div class="card" style="width: 19rem; height: 25rem;">
                    <img src="~/img/Capricciosa.jpg" class="card-img-top" alt="Capricciosa" style="height: 12rem;">
                <div class="card-body">
                    <h5 class="card-title ms-lg-3">Capricciosa</h5>
                        <p class="card-text ms-lg-3">Pizza amata dal ristoratore. Gli permette di liberarsi dei condimenti</p>
                        <h6 class="ms-lg-3">Prezzo:6$</h6>
                </div>
            </div>
        </li>
    </ul>
</main>
</body>
</html>