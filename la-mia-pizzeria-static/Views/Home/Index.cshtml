@{
      Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <title>Bootstrap-freelancer</title>
    <!-- fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- bootstrap icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <!-- bootstrap css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

    <!-- bootstrap js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous" defer></script>
    <!-- style -->
</head>
<body>
    
<main>  
    <ul class="d-flex">
        <li>    
            <div class="card" style="width: 18rem;">
                <img src="~/img/margherita-50kalo.jpg" class="card-img-top" alt="Pizza Margherita">
                <div class="card-body">
                    <h5 class="card-title">Margherita</h5>
                    <p class="card-text">Pizza classica dal gusto inconfondibile.</p>
                    <h6>Prezzo:4$</h6>
                </div>
            </div>
        </li>
        <li>
            <div class="card" style="width: 18rem;">
                <img src="~/img/americana.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Americana</h5>
                    <p class="card-text">Pizza che De Sica definirebbe con: 'Che è sta cafonata', ma morso dopo morso ti conquista.</p>
                    <h6>Prezzo:6$</h6>
                </div>
            </div>
        </li>
        <li>
            <div class="card" style="width: 18rem;">
                <img src="~/img/diavola.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Diavola</h5>
                    <p class="card-text">Pizza leggera ma con quel pizzico in più.</p>
                    <h6>Prezzo:5$</h6>
                </div>
            </div>
        </li>
        <li>    
            <div class="card" style="width: 18rem;">
                <img src="~/img/Capricciosa.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Capricciosa</h5>
                    <h5 class="card-title"></h5>
                    <p class="card-text">Pizza amata dal ristoratore perchè gli permette di liberarsi di condimenti stagionati da secoli come le olive.</p>
                    <h6>Prezzo:6$</h6>
                </div>
            </div>
        </li>
    </ul>
</main>
</body>
</html>